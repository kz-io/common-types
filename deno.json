{
  "name": "@kz/common-types",
  "version": "0.0.1",
  "exports": {
    ".": "./mod.ts",
    "./types": "./src/types/mod.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "no-throw-literal"
      ]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "preserve",
    "useTabs": false,
    "singleQuote": true,
    "semiColons": true
  },
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test:unit": "deno test --allow-all --trace-leaks",
    "test": "deno test --allow-all --doc --trace-leaks",
    "docs": "deno doc --html --name=@kz/common-types ./mod.ts",
    "pre-commit": "deno task test && deno task lint && deno task fmt",
    "cache": "deno cache --reload --lock=lock.json --lock-write deps.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.221.0",
    "@std/testing": "jsr:@std/testing@^0.221.0"
  },
  "exclude": [
    ".git",
    "cov",
    "coverage",
    "testdata",
    "docs"
  ],
  "publish": {
    "exclude": [
      "**/*.test.ts",
      "coverage",
      "cov.lcov",
      "test-data",
      "docs",
      ".git"
    ]
  }
}
